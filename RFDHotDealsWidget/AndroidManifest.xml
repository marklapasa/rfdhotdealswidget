<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.lapasa.rfdhotdealswidget"
    android:versionCode="4"
    android:versionName="1.0" >

    <uses-sdk android:targetSdkVersion="14" 
        android:minSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:installLocation="internalOnly" >
        
        
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         
        <activity
            android:name=".ConfigurationActivity"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver android:name=".DealsWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.lapasa.rfdhotdealswidget.ACTION_WIDGET_RECEIVER"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/rfdhotdeals_appwidget_info" />
        </receiver>

        <service
            android:name="DealsService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>